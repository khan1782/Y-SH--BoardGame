<div class="row main_container">
	<div class="large-12 columns">

		<div class="row main_nav">
			<div class="large-12 columns">
			<nav>
				<%= link_to "Random Ten", {:controller => "games", :action => "index", :list => "random" }%> |
				<%= link_to "User Top Ten", {controller: "games", action:"index", list: "user" } %> |
				<%= link_to "BGG Top Ten", {controller: "games", action:"index", list: "bgg"} %>
				</nav>
			</div>
		</div>

		<div class="row">
			<div class="large-3 columns">
				<nav class="left-off-canvas-menu">
				<p>Want to find a new game?</p>
					<% 7.times do |i| %>
					<li class="item"><%= link_to "#{i+1} Player Games", {controller: "games", action:"index", list: "by_num", num:"#{i+1}" } %></li>
					<% end %>
					<li class="item"><%= link_to "8+ Player Games", {controller: "games", action:"index", list: "by_num", num:"8"} %></li>
				</nav>
			</div>


		<div class="large-8 columns">
			<h2><%= @list_title %></h2>
			<% @list_of_games.each_with_index do |game, i|%>
				<div class="row game-row">
					<div class="large-5 columns">
						<img src="<%= game.thumbnail %> " height="50px">
					</div>
					<div class="large-6 columns">
					<h3><% if @list_action == "user" || @list_action == "bgg" %><%= i+1 %>.<% end %> <%= link_to game.title, game %></h3>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	</div>
</div>
